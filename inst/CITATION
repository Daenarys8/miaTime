citHeader("Kindly cite the miaTime R package as follows:")

note <- sprintf("Version %s", meta$Version)

citEntry(entry="misc",
         title = "miaTime R package",
         author = personList(
	   person(given = "Yagmur", family="Simsek", email = "yagmur.simsek.98@gmail.com"),
	   person(given = "Leo", family="Lahti")
         ),
	 url = "microbiome.github.io/miaTime",
	 note = note,
         textVersion =
         paste("(C) Yagmur Simsek and Leo Lahti.",
               "miaTime R package",
	       note,
	       "Package URL: microbiome.github.io/miaTime",
               sep=" ")
         )
